<layer>
    <element>
		
        <type>wall/single_window</type>
        
        <transform>
            <scale>1,1,1</scale>
            <rotate>0,0,0</rotate>
            <translate>0,0,0</translate>
        </transform>
        
        <texture>wall.jpg</texture>
        
        <property>
            <width>20</width>
            <height>20</height> 
            <ratio>0.5,0.5</ratio> 
            <windowW>3</windowW>
            <windowH>3</windowH>
            <thickness>1</thickness> 
        </property> 
         
    </element>  
    
    <element>
		
        <type>window/fixed</type>
        
        <transform>
            <scale>1,1,1</scale>
            <rotate>0,0,0</rotate>
            <translate>0,0,-1</translate>
        </transform>
        
        <texture>iron.jpg</texture>
        
        <property>
            <extend>1</extend>
            <size>3,3</size>
            <thickness>1</thickness>
        </property>
        
    </element>

</layer>           
